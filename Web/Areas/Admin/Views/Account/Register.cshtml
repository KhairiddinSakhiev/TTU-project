@using Domain.AccountDto
@model Register
 <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="~/Images/logo.svg" alt="logo">
              </div>
              <h4>Салом! биёед оғоз кунем</h4>
              <h6 class="fw-light">Барои ин сабти ном кунед ?</h6>
              <form class="pt-3" asp-area="Admin" asp-action="Register" asp-controller="Account" asp-antiforgery="true">
                <div class="form-group">
                  <input asp-for="UserName" type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Номи корбар">
                </div>
                <div class="form-group">
                  <input asp-for="Email" type="email" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Почтаи электрони корбар">
                </div>
                 <div class="form-group">
                  <input asp-for="Password" type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Калиди  корбар">
                </div>
                <div class="form-group">
                  <input asp-for="ComfirmPassword" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Калидро такроран нависед">
                </div>
                <div class="mt-3">
                  <button  type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                       Сохтан
                  </button>
                   <a  type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-area="Admin" asp-action="Index" asp-controller="Home">
                       Бекор намудан
                  </a>
                </div>             
                
                
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
