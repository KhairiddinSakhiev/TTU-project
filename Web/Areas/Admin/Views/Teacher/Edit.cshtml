@using Domain.EntitiesDto
@model TeacherDto


<form asp-action="Edit" method="post" asp-controller="Teacher">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>FirstName:</label>
                <input asp-for="FirstName" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>LastName:</label>
                <input asp-for="LastName" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>MiddleName:</label>
                <input asp-for="MiddleName" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>Description:</label>
                <input asp-for="Description" type="text" class="form-control" placeholder="Введите описания" tabindex="2">
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input asp-for="Address" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Введите  " tabindex="2">
            </div>
            <div class="form-group">
                <label>Phonenumber:</label>
                <input asp-for="PhoneNumber" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>BirthDate:</label>
                <input asp-for="BirthDate" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>Image:</label>
                <input asp-for="Image" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>Gender:</label>
                <input asp-for="Gender" type="checkbox" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>Degree:</label>
                <input asp-for="Degree" type="checkbox" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>Status:</label>
                <input asp-for="Status" type="checkbox" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Добавить</button>
                    <a asp-action="Index" asp-controller="Teacher" class="btn btn-secondary">Оменить</a>
                </center>
            </div>
        </div>
    </div>
</form>