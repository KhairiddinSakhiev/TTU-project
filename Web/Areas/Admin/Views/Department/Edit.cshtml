@using Domain.EntitiesDto
@model DepartmentDto



<form asp-action="Edit"  method="post" asp-controller="Department">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Ном:</label>
                <input asp-for="Title" type="text" class="form-control " placeholder="Номро ворид кунед" tabindex="1">
            </div>
            <div class="form-group">
                <label>Тавсиф:</label>
                <input asp-for="Description" type="text" class="form-control" placeholder="Тавсифро ворид кунед" tabindex="2">
            </div>
             <div class="form-group">
                <label>Фаъол:</label>
                <input asp-for="Enabled" type="text" class="form-control" placeholder="Шуъба фаъол аст ё не  " tabindex="2">
            </div>           
            
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Иваз намудан</button>
                    <a asp-action="Index" asp-controller="Department" class="btn btn-secondary">Бекор намудан</a>
                </center>
            </div>
        </div>
    </div>
</form>