@using Domain.EntitiesDto
@model DepartmentDto


<h1>Шумо ин малумотро нест кардан мехохед ?</h1>
<form asp-action="Delete"  method="post" asp-controller="Department">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Ном:</label>
                <input asp-for="Title" type="text" class="form-control "  tabindex="1">
            </div>
            <div class="form-group">
                <label>Тавсиф:</label>
                <input asp-for="Description" type="text" class="form-control"  tabindex="2">
            </div>
             <div class="form-group">
                <label>Фаъол:</label>
                <input asp-for="Enabled" type="text" class="form-control"  tabindex="2">
            </div>           
            
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Нест намудан</button>
                    <a asp-action="Index" asp-controller="Department" class="btn btn-secondary">Бекор намудан</a>
                </center>
            </div>
        </div>
    </div>
</form>

