@using Domain.EntitiesDto
@model PositionDto



<h3>Илова намудан</h3>
<form asp-action="Create" asp-controller="Position" asp-antiforgery="true" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div>

        <div class="form-group">
            <label asp-for="Name"><b>Ном</b></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
       


         <div class="form-group">
            <label asp-for="Enabled"><b>Фаъоли</b></label>
            <input type="text" asp-for="Enabled" class="form-control" />
            <span asp-validation-for="Enabled"></span>
        </div>
     
         
        
          
        <div class="form-group">
            <label asp-for="PositionType"><b>Навъи вазифа </b></label>
            <input type="text" asp-for="PositionType" class="form-control" />
            <span asp-validation-for="PositionType"></span>
        </div>   

         <div class="form-group">
                <label>Шуъба</label>
                <select class="form-control" asp-for="DepartmentId">
                @foreach (var item in ViewBag.Departments )
                {
                    <option value="@item.Id">

                        @item.Title
                    </option>
                }

                </select>
                <span asp-validation-for="DepartmentId"></span>
            </div>
       
     <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Илова намудан</button>
                    <a asp-action="Index" asp-controller="Position" class="btn btn-secondary">Бекор намудан</a>
                </center>
      </div>
    </div>
</form>
