@using Domain.Entities
@model List<Position>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Position" class="btn btn-success">Добавить</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>     
                    <td>Номи вазифа</td>
                    <td>Фаъол</td>
                    <td>Намуди мавкеъ</td>
                    <td>Номи шубаъ</td>
                           
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Name</td>
                    <td>@item.Enabled</td>
                    <td>@item.PositionType</td>
                    <td>@item.Department?.Title</td>
                    
                     
                   
                   

                    <td>
                        <a asp-action="Edit" asp-controller="Position" asp-route-id="@item.Id">
                            Иваз намудан
                        </a>
                        <a asp-action="Delete" asp-controller="Position" asp-route-id="@item.Id">
                            Нест намудан
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
