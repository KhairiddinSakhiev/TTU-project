@using Domain.EntitiesDto
@model SliderDto


<h1>Вы точно хотите удалить</h1>
<form asp-action="Delete"  method="post" asp-controller="Slider">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Title:</label>
                <input asp-for="Title" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
           <div class="form-group">
                <label>Image:</label>
               <input asp-for="ImageName" type="file" name="file" id="file" class="form-control" accept="application" placeholder="Введите фото" tabindex="1" />
            </div>
             <div class="form-group">
                <label>Enabled:</label>
                <input asp-for="Enabled" type="text" class="form-control" placeholder="Введите  " tabindex="2">
            </div>           
            
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Удалить</button>
                    <a asp-action="Index" asp-controller="Slider" class="btn btn-secondary">Оменить</a>
                </center>
            </div>
        </div>
    </div>
</form>


