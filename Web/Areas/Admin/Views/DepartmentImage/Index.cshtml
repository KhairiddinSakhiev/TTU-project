@using Domain.Entities
@model List<DepartmentImage>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="DepartmentImage" class="btn btn-success">Добавить</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>     
                    <td>DepartmentTitle</td>
                    <td>Title</td> 
                    <td>Description</td>
                           
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Department.Title</td> 
                    <td>@item.Title</td>
                    <td>@item.Department.Description</td> 
                   
                     
                   
                   

                    <td>
                        <a asp-action="Edit" asp-controller="DepartmentImage" asp-route-id="@item.Id">
                            Измениить
                        </a>
                        <a asp-action="Delete" asp-controller="DepartmentImage" asp-route-id="@item.Id">
                            Удалить
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>