@using Domain.EntitiesDto
@model DepartmentImageDto



<form asp-action="Create"  method="post" asp-controller="DepartmentImage">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Title:</label>
                <input asp-for="Title" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
           <div class="form-group">
                <label>Departments</label>
                <select class="form-control" asp-for="DepartmentId">
                @foreach (var item in ViewBag.Departments )
                {
                    <option value="@item.Id">

                        @item.FirstName
                    </option>
                }

                </select>
                <span asp-validation-for="DepartmentId"></span>
            </div>
                      
            
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Добавить</button>
                    <a asp-action="Index" asp-controller="DepartmentImage" class="btn btn-secondary">Оменить</a>
                </center>
            </div>
        </div>
    </div>
</form>

