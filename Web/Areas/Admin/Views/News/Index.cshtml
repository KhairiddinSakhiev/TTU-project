@using Domain.Entities
@model List<News>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="News" class="btn btn-success">Илова намудан</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-active table-bordered table-hover">
            <thead>
            <tr>     
                     <td>Сарлавха</td>
                     <td>Сурат</td>
                     <td>Тавсиф</td>
                     <td>Рузи бромад</td>  
                     <td>Фаъол</td>
                           
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                     <td>@item.Title</td>
                     <td><img src="~/Images/@item.Image"  width="100" height="100"  alt="Photo" accept="application" /></td>
                     <td>@item.Description</td>
                     <td>@item.CreatedAt</td> 
                     <td>@item.Enabled</td>                   
                   
                   
                     
                    <td>
                        <a asp-action="Edit" asp-controller="News" asp-route-id="@item.Id">
                            Иваз намудан
                        </a>
                        <a asp-action="Delete" asp-controller="News" asp-route-id="@item.Id">
                            Нест намудан
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
