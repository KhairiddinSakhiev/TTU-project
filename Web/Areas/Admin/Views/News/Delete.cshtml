@using Domain.EntitiesDto
@model NewsDto



<h3>Илова намудан</h3>
<form asp-action="Delete" asp-controller="News" asp-antiforgery="true" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div>

        <div class="form-group">
            <label asp-for="Title"><b>Title</b></label>
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image" accept="image/*" class="form-control-file"/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
         <div class="form-group">
            <label asp-for="Description"><b>Description</b></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
     
         
        <input asp-for="ImageName"? type="hidden"  class="form-control" accept="application" />
         
         
       
        <div class="form-group">
            <label asp-for="CreatedAt"><b>CreatedAt</b></label>
            <input type="text" asp-for="CreatedAt" class="form-control" />
            <span asp-validation-for="CreatedAt"></span>
        </div>   
         <div class="form-group">
            <label asp-for="Enabled"><b>Enabled</b></label>
            <input type="text" asp-for="Enabled" class="form-control" />
            <span asp-validation-for="Enabled"></span>
        </div>   
       
       
        <div class="form-group" >
            <input  type="submit" value="Удалить" class="form-control btn" />
        </div>
    </div>
</form>