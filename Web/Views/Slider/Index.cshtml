@using Domain.Entities
@model List<Slider>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Slider" class="btn btn-success">Илова намудан</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>     
                    <td>Сарлавха</td>
                    <td>Сурат</td> 
                    <td>Фаъол</td>
                           
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>                    
                    <td>@item.Title</td>                  
                     <td><img width="100" height="100" src="~/Images/@item.Image" alt="Photo" accept="application" /></td>
                    <td>@item.Enabled</td>                                                           
                    <td>
                        <a asp-action="Edit" asp-controller="Slider" asp-route-id="@item.Id">
                            Иваз намудан
                        </a> y
                        <a asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id">
                            Нест намудан
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>w