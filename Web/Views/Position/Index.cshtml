@using Domain.Entities
@model List<Position>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Position" class="btn btn-success">Добавить</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>     
                    <td>Name</td>
                    <td>DepartmentId</td> 
                    <td>Enabled</td>
                           
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Name</td>
                    <td>@item.DepartmentId</td> 
                    <td>@item.Enabled</td>
                   
                     
                   
                   

                    <td>
                        <a asp-action="Edit" asp-controller="Position" asp-route-id="@item.Id">
                            Измениить
                        </a>
                        <a asp-action="Delete" asp-controller="Position" asp-route-id="@item.Id">
                            Удалить
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>