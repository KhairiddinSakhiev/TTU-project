@using Domain.EntitiesDto
@model PositionDto



<form asp-action="Create"  method="post" asp-controller="Position">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Name:</label>
                <input asp-for="Name" type="text" class="form-control " placeholder="Введите названия" tabindex="1">
            </div>
            <div class="form-group">
                <label>DepartmentId:</label>
                <input asp-for="DepartmentId" type="text" class="form-control" placeholder="Введите описания" tabindex="2">
            </div>
            <div class="form-group">
                <label>Enabled:</label>
                <input asp-for="Enabled" type="text" class="form-control" placeholder="Введите  " tabindex="2">
            </div>           
            
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Добавить</button>
                    <a asp-action="Index" asp-controller="Position" class="btn btn-secondary">Оменить</a>
                </center>
            </div>
        </div>
    </div>
</form>