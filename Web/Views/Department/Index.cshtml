@using Domain.Entities
@model List<Department>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Department" class="btn btn-success">Илова намудан</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
            <tr>     
                    <td>Ном</td>
                    <td>Тавсиф</td> 
                    <td>Шуба фаъол аст ?</td>
                           
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.Title</td>
                    <td>@item.Description</td> 
                    <td>@item.Enabled</td>
                   
                     
                   
                   

                    <td>
                        <a asp-action="Edit" asp-controller="Department" asp-route-id="@item.Id">
                            Иваз намудан
                        </a>
                        <a asp-action="Delete" asp-controller="Department" asp-route-id="@item.Id">
                            Нест намудан
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>