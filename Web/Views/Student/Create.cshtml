@using Domain.EntitiesDto
@model StudentDto


<form asp-action="Create" asp-controller="Student" asp-antiforgery="true" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div>

        <div class="form-group">
            <label asp-for="FirstName"><b>Ном</b></label>
            <input type="text" asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName"></span>
        </div>
         <div class="form-group">
            <label asp-for="LastName"><b>Насаб</b></label>
            <input type="text" asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>
     
          <div class="form-group">
                <label asp-for="Image" class="control-label"><b>Сурат</b></label>
                <input asp-for="Image" accept="image/*" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
        <input asp-for="ImageName"? type="hidden"  class="form-control" accept="application" />
         
         <div class="form-group">
            <label asp-for="Description"><b>Тавсиф</b></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>   
        <div class="form-group">
            <label asp-for="Title"><b>Унвон</b></label>
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>   
        <div class="form-group">
            <label asp-for="Address"><b>Сурога</b></label>
            <input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address"></span>
        </div>   
         <div class="form-group">
            <label asp-for="Enabled"><b>Фаъол</b></label>
            <input type="text" asp-for="Enabled" class="form-control" />
            <span asp-validation-for="Enabled"></span>
        </div>   
         <div class="form-group">
            <label asp-for="PhoneNumber"><b>Раками телефон</b></label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>   
         <div class="form-group">
            <label asp-for="Age"><b>Сину сол</b></label>
            <input type="text" asp-for="Age" class="form-control" />
            <span asp-validation-for="Age"></span>
        </div>   

       
       <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Илова намудан</button>
                    <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Бекор намудан</a>
                </center>
            </div>
    </div>
</form>