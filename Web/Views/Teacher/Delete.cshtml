@using Domain.EntitiesDto
@model TeacherDto


<h3>Шумо ин малумотро нест кардан мехохед ?</h3>
<form asp-action="Delete" asp-controller="Teacher" asp-antiforgery="true" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Ном:</label>
                <input asp-for="FirstName" type="text" class="form-control " placeholder="Номро ворид намоед" tabindex="1">
            </div>
             <div class="form-group">
                <label>Насаб:</label>
                <input asp-for="LastName" type="text" class="form-control " placeholder="Насабро ворид намоед" tabindex="1">
            </div>
             <div class="form-group">
                <label>Номи падар:</label>
                <input asp-for="MiddleName" type="text" class="form-control " placeholder="Номи падарро ворид намоед " tabindex="1">
            </div>
           
             <div class="form-group">
                <label>Сурога:</label>
                <input asp-for="Address" type="text" class="form-control " placeholder="Сурогаро ворид намоед" tabindex="1">
            </div>
             <div class="form-group">
                <label>Рақами телефон:</label>
                <input asp-for="PhoneNumber" type="text" class="form-control " placeholder="Раками телефонро ворид намоед" tabindex="1">
            </div>
             <div class="form-group">
                <label>Почтаи электрони:</label>
                <input asp-for="Email" type="text" class="form-control " placeholder="Почтаи электрониро ворид намоед" tabindex="1">
            </div>
            
             <div class="form-group">
                <label>Рузи таваллуд:</label>
                <input asp-for="BirthDate" type="text" class="form-control " placeholder="Почтаи электрониро ворид намоед" tabindex="1">
            </div>
           
                     
            
           
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Нест намудан</button>
                    <a asp-action="Index" asp-controller="Teacher" class="btn btn-secondary">Бекор кардан</a>
                </center>
            </div>
        </div>
    </div>
</form>
